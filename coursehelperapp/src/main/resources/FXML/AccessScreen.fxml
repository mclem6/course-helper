<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<BorderPane styleClass="root" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.coursehelper.controllers.AccessScreenController">
  
  <right> 
      
     <VBox spacing="0">

         <BorderPane.margin>
            <Insets top="150" right="142" bottom="0" left="0"/>
         </BorderPane.margin>
         <VBox alignment="center">
            <Label styleClass="app-name" text="Course Helper" />
         </VBox>
         
         <VBox spacing="15" styleClass="access-container">
      
            <children>

               <VBox spacing="10">
                  <Label text="Username" styleClass="un-pw-text"/>
                  <TextField fx:id="username" styleClass="text-field"/>
                  <Label text="Password" styleClass="un-pw-text"/>
                  <TextField fx:id="password" styleClass="text-field"/>
               </VBox>

               <Text fx:id="errorText" style="-fx-fill: red;" />

               <HBox spacing="10">
                  <Button fx:id="logInButton" text="Log In" onAction="#handleLogin" styleClass="login-button"/>
                  <Button fx:id="createAccountButton" text="Create Account" onAction="#createAccount" styleClass="login-button"/>
               </HBox>

            </children> 
         </VBox>
      </VBox>
   </right>


</BorderPane>
