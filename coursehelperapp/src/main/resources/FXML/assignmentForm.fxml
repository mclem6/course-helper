<?xml version="1.0" encoding="UTF-8"?>


<?import org.controlsfx.control.CheckComboBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>
<?import java.lang.*?>
<?import javafx.geometry.Insets?>


<VBox spacing="15" alignment="CENTER_LEFT" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.coursehelper.controllers.AddAssignmentFormController">
    
    <!-- Popup Title -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Add New Assignment" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
        <padding>
            <Insets top="0" right="20" bottom="20" left="0"/>
        </padding>
    </HBox>

    <!-- Assignment Title -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Title:" prefWidth="100" minWidth="100"/>
        <TextField fx:id="assignment_title" prefWidth="200"/>
    </HBox>

    <!-- Assignment Type  -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Type:" prefWidth="100" minWidth="100"/>
         <ComboBox fx:id="assignment_type" prefWidth= "125" maxWidth="125">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="homework"/>
                    <String fx:value="project"/>
                    <String fx:value="other"/>
                </FXCollections>
            </items>
         </ComboBox>
    </HBox>

    <!-- Assigment's Course  -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Course:" prefWidth="100" minWidth="100"/>
         <ComboBox fx:id="course_combo" prefWidth= "125" maxWidth="125"/>
    </HBox>
    
   
    <!-- Due Date -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Due Date:" prefWidth="100" minWidth="100"/>
        <DatePicker fx:id="due_date_picker" prefWidth= "150" maxWidth="150"/>
    </HBox>
    
    <!-- Due Time -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Due Time:" prefWidth="100" minWidth="100"/>
        <ComboBox fx:id="due_time_combo" prefWidth= "150" maxWidth="150"/>
    </HBox>


    <!-- Submit and Cancel Buttons -->
    <HBox spacing="5" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
        <Button fx:id="add_assignment_button" text="add" prefWidth= "80" maxWidth="80" onAction="#addAssignment" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button fx:id="cancel_assignment_button" text="cancel" prefWidth= "80" maxWidth="80" onAction="#cancelAssignment" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
    </HBox>

    
</VBox>